<Window x:Class="Simple_Customized_Crosshair_SCC.Views.CrosshairWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Crosshair" 
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        ResizeMode="NoResize"
        IsHitTestVisible="False"
        ShowActivated="False">

    <Canvas x:Name="CrosshairCanvas" 
            Background="Transparent" 
            IsHitTestVisible="False"
            Focusable="False">
        <!-- Прицел будет отрисовываться в code-behind -->
    </Canvas>
</Window>